@namespace Facepunch.Minigolf.UI

@inherits Sandbox.UI.Panel
@attribute [StyleSheet( "/UI/ControlHints.scss" )]

<root>
	@if ( Game.LocalPawn.IsValid() )
	{
		<div class="hint">
			<text>Stroke</text>
			<buttonhint name=@InputActions.Attack1 />
		</div>
		<div class="hint">
			<text>Free Cam</text>
			<buttonhint name=@InputActions.View />
		</div>
		<div class="hint">
			<text>Reset Ball</text>
			<buttonhint name=@InputActions.Reload />
		</div>
	}
	else
	{
		<div class="hint">
			<text>Swap Spectating</text>
			<buttonhint name=@InputActions.Attack1 />
			<buttonhint name=@InputActions.Attack2 />
		</div>
	}
	<div class="hint">
		<text>Customise Menu</text>
		<buttonhint name="Menu" />
	</div>
	<div class="hint">
		<text>Scoreboard</text>
		<buttonhint name=@InputActions.Score />
	</div>
</root>

@code {
	protected override int BuildHash()
	{
		return HashCode.Combine( Game.LocalPawn.IsValid() );
	}
}
