@namespace Facepunch.Minigolf.UI

@inherits RootPanel
@attribute [StyleSheet( "/UI/Styles/root.scss" )]

<root class=@( IsPlaying ? "state--playing" : "" )>
	<voicechat></voicechat>
	<textchat></textchat>

	@if ( !IsPlaying )
	{
		<waitingscreen></waitingscreen>
	}

	<!-- All of this will be hidden unless we are in game play -->
	<div class="state-playing">
		<freecamoverlay></freecamoverlay>
		<holescore></holescore>
		<powerbar></powerbar>
		<controlhints></controlhints>
		<holemarker></holemarker>
		<scorefeed></scorefeed>
	</div>

	<spectatinginfo></spectatinginfo>
	<golfscoreboard></golfscoreboard>
	<customizationmenu></customizationmenu>
</root>

@code {
	private bool IsPlaying => true;
	protected override int BuildHash() => HashCode.Combine( IsPlaying );
}
