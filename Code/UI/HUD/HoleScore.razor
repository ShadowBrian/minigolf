@namespace Facepunch.Minigolf.UI

@inherits Sandbox.UI.Panel

<root>
	<div class="course-info">
		<div class="info-container">
			<label>Par</label>
			<label class="value">@Par</label>
		</div>

		<div class="info-container">
			<label>Hole</label>
			<label class="value">@Hole</label>
		</div>
	</div>

	<div class="stroke-ball">
		<label>@Stroke</label>
	</div>
</root>

@code {
    public int Stroke => Ball.Local.GetCurrentPar();
    public int Par => GameManager.Instance.CurrentHole.Par;
    public int Hole => GameManager.Instance.CurrentHole.Number;

	protected override int BuildHash() => HashCode.Combine( Stroke, Par, Hole );
}
